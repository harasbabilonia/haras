<p id="notice"><%= notice %></p>

<h1>Animais</h1>

<table class="table  table-bordered table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Sexo</th>
      <th>Pelagem</th>
      <th>Data nascimento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animais.each do |animal| %>
      <tr>
        <td><%= animal.nome %></td>
        <td><%= animal.sexo %></td>
        <td><%= animal.pelagem %></td>
        <td><%= animal.data_nascimento %></td>
        <td><%= link_to 'Show', animal %></td>
        <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
        <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

