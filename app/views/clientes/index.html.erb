<p id="notice"><%= notice %></p>

<div class="page-header">
    <h1>Clientes
    
</div>

<table class="table  table-bordered table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Rg</th>
      <th>Cpf</th>
      <th>Endereco</th>
      <th>Cidade</th>
      <th>Estado</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nome %></td>
        <td><%= cliente.rg %></td>
        <td><%= cliente.cpf %></td>
        <td><%= cliente.endereco %></td>
        <td><%= cliente.cidade %></td>
        <td><%= cliente.estado %></td>
        <td>
            <%= link_to raw('<i class="ace-icon fa fa-eye"></i>'), cliente %> | 
            <%= link_to raw('<i class="ace-icon fa fa-pencil"></i>'), edit_cliente_path(cliente) %> | 
            <%= link_to raw('<i class="ace-icon fa fa-trash-o"></i>'), cliente, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Cliente', new_cliente_path, :class => "btn btn-info" %>
