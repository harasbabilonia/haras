<div class="row">
<div class="col-xs-12">

<div class="form-horizontal" role="form">


<%= form_for(parcela) do |f| %>
  <% if parcela.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(parcela.errors.count, "error") %> prohibited this parcela from being saved:</h2>

      <ul>
      <% parcela.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :venda_id, :class=> "col-sm-3 control-label no-padding-right" %>
    <div class="col-sm-5"><input disabled type="text" size="40" value="<%= @parcela.venda.tipo_venda.tipo %> - <%= @parcela.venda.animal.nome %>" ></div>
  </div>

  <div class="form-group">
    <%= f.label :numero, :class=> "col-sm-3 control-label no-padding-right" %>
    <div class="col-sm-5"><input disabled type="text" value="<%= @parcela.numero %>"></div>
  </div>

  <div class="form-group">
    <%= f.label :data_vencimento, :class=> "col-sm-3 control-label no-padding-right" %>
    <div class="col-sm-5"><input disabled type="text" value="<%= @parcela.data_vencimento %>"></div>
  </div>


  <div class="form-group">
    <%= f.label :valor, :class=> "col-sm-3 control-label no-padding-right" %>
    <div class="col-sm-5"><input disabled type="text" value="<%= @parcela.valor %>"></div>
  </div>


  <div class="form-group">
    <%= f.label :data_pagamento, :class=> "col-sm-3 control-label no-padding-right" %>
    <div class="col-sm-3">

      <div class="input-group">
      <%= f.text_field :data_pagamento, :value => @parcela.data_vencimento.strftime("%d/%m/%Y"), :class=>"form-control date-picker", "data-date-format"=>"dd/mm/yyyy" %>
        <span class="input-group-addon">
           <i class="fa fa-calendar bigger-110"></i>
        </span>
      </div>


    </div>
  </div>

  <div class="form-group">
    <%= f.label :valor_pago,  :class=> "col-sm-3 control-label no-padding-right" %>
    <div class="col-sm-5"><%= f.text_field :valor_pago, :value => @parcela.valor %></div>
  </div>



  <div class="clearfix form-actions">
	    <div class="col-md-offset-3 col-md-9">
		    <button type="submit" class="btn btn-info">
			    <i class="ace-icon fa fa-check bigger-110"></i>
			    Salvar
		    </button>
        <%= link_to "Voltar", 'javascript:history.go(-1)', :class=> "btn" %>

	    </div>
    </div>
<% end %>






</div>
</div>


<%= render :partial => "common/js_forms" %>
